<Window x:Class="POC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POC"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="15*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>





        </Grid>
        <Label Grid.Column="1" Content="This application is use for mooving a table (POC)" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
        <Image Grid.Column="1" Source="./Assets/img.png" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Stretch="Fill"/>
        
        <ProgressBar x:Name="ProgressBar"  Grid.Column="1" HorizontalAlignment="Center" Margin="0 0 0 50" Height="10" Grid.Row="3" VerticalAlignment="Center" Width="400"/>
        <Slider x:Name="Slider" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="400" Loaded="Slider_Loaded"/>



    </Grid>
</Window>
